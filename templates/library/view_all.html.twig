<div class="wrapper">

    {% include 'library/navbar.html.twig' %}

    <p>Klicka på en titel för att se den boken</p>

    <ul>
        {% for book in library %}
            <li>{{ book.getTitle|e }} ({{ book.getIsbn|e }}) {{ book.getAuthor|e }}</li>
        {% endfor %}
    </ul>

</div>
{% endblock %}




