{% extends "base.html.twig" %}

{% block title %}21{% endblock %}

{% block body %}
<h1>21</h1>

{% if winner == 'player' %}
    <h2>DU VANN</h2>
    {#<h3>
        Grattis, du fick {{ playerPoints }} poäng! (Banken fick {{ bankPoints }} poäng)
    </h3>#}
{% elseif winner == 'bank' %}
    <h2>DU FÖRLORADE</h2>
    {#<h3>
        Du förlorade. Banken fick {{ bankPoints }} poäng och du {{ playerPoints }} poäng
    </h3>#}
{% endif %}

<h3>Spelarens kort</h3>
<p>
    {% for card in playersCards %}
        {{ card }}
    {% endfor %}
</p>

<h3>Bankens kort</h3>
<p>
    {% for card in banksCards %}
        {{ card }}
    {% endfor %}
</p>




<form action="{{ path('game_21_2_get') }}" method="get">
    <button type="submit">Nytt omgång</button>
</form>

{% endblock %}